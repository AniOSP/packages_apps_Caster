<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/aniosp_about_title">

    <PreferenceScreen
        android:key="aniosp_logo"
        android:layout="@layout/aniosp_logo" />

    <!-- About AniOSP -->
    <PreferenceCategory
        android:key="aniosp_about_summary"
        android:title="@string/aniosp_about_summary" />

        <Preference
            android:selectable="false"
            settings:searchable="false"
            android:summary="@string/aniosp_about_info_summary" />

        <Preference
            android:title="@string/aniosp_website_title"
            android:icon="@drawable/ic_settings_aniosp_about"
            android:summary="@string/aniosp_website_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://aniosp.org" />
        </Preference>

        <Preference
            android:title="@string/aniosp_telegram_title"
            android:icon="@drawable/ic_telegram"
            android:summary="@string/aniosp_telegram_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/AniOSPChat" />
        </Preference>

        <Preference
            android:title="@string/aniosp_github_title"
            android:icon="@drawable/ic_github"
            android:summary="@string/aniosp_github_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/AniOSP" />
        </Preference>

    <!-- Team AniOSP -->
    <PreferenceCategory
        android:key="about_team"
        android:title="@string/aniosp_about_team" />

        <Preference
            android:title="@string/aniosp_about_relms"
            android:summary="@string/aniosp_about_relms_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://twitter.com/relms12345" />
        </Preference>
</PreferenceScreen>
